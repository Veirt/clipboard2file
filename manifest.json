{
  "manifest_version": 2,
  "name": "Clipboard2File",
  "version": "1.4",
  "description": "Clipboard2File is a tiny extension that lets you use an image on your clipboard as a file!",
  "icons": {
    "549": "/icons/clipboard2file.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "91.0"
    }
  },
  "permissions": ["clipboardRead"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_end",
      "all_frames": true,
      "js": ["content_script/content.js"]
    }
  ]
}
